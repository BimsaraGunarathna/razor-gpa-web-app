@model razor_gpa_web_app.Pages.Semesters.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Semester</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Semester.SemesterNumber" class="control-label"></label>
                <input asp-for="Semester.SemesterNumber" class="form-control" />
                <span asp-validation-for="Semester.SemesterNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semester.SemesterName" class="control-label"></label>
                <input asp-for="Semester.SemesterName" class="form-control" />
                <span asp-validation-for="Semester.SemesterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semester.AcademicYearID" class="control-label"></label>
                <select asp-for="Semester.AcademicYearID" class ="form-control" asp-items="ViewBag.AcademicYearID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

