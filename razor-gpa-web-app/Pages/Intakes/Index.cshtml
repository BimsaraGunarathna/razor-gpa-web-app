@page
@model razor_gpa_web_app.Pages.Intakes.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Intake[0].IntakeNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Intake) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IntakeNumber)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IntakeID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.IntakeID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.IntakeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
