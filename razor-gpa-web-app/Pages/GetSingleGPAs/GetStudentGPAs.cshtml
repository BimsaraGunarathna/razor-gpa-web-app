<div class=".container">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StudentPaperGradeForSemesterOneList[0].SubjectName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StudentPaperGradeForSemesterOneList[0].SubjectGrade)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.StudentPaperGradeForSemesterOneList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubjectName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubjectGrade)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
