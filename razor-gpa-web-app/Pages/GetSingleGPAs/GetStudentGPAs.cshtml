        <div></div>
        <div></div>
        <h1>Semester 3</h1>
        <h1>@Model.SemesterThreeGPA</h1>
        <div></div>
        <div></div>
        <h1>Semester 4</h1>
        <h1>@Model.SemesterFourGPA</h1>
        <div></div>
        <div></div>
        <h1>Semester 5</h1>
        <h1>@Model.SemesterFiveGPA</h1>
        <div></div>
        <div></div>
        <h1>Semester 6</h1>
        <h1>@Model.SemesterSixGPA</h1>
        <div></div>
        <div></div>
        <h1>Semester 7</h1>
        @if (!Double.IsNaN(Model.SemesterSevenGPA) && !Double.IsInfinity(Model.SemesterSevenGPA))
        {
            <h1>@Model.SemesterSevenGPA</h1>
        }
        else
        {
