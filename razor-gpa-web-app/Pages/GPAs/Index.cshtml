        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GPAValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year.YearID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester.SemesterID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectModule.SubjectModuleID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.GPAID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.GPAID">Details</a> |
