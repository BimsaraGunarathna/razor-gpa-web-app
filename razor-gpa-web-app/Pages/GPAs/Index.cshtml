    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GPA[0].GPAValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPA[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPA[0].Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPA[0].SubjectModule)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPA[0].ApplicationUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
