@page
@model razor_gpa_web_app.Pages.GPAs.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>GPA</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GPA.GPAValue" class="control-label"></label>
                <input asp-for="GPA.GPAValue" class="form-control" />
                <span asp-validation-for="GPA.GPAValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GPA.StudentID" class="control-label"></label>
                <select asp-for="GPA.StudentID" class="form-control"
                        asp-items="@Model.StudentNameSL">
                    <option value="">-- Select Student --</option>
                </select>
                <span asp-validation-for="GPA.StudentID" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="GPA.SemesterID" class="control-label"></label>
                <select asp-for="GPA.SemesterID" class="form-control"
                        asp-items="@Model.SemesterNameSL">
                    <option value="">-- Select Semester --</option>
                </select>
                <span asp-validation-for="GPA.SemesterID" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="GPA.SubjectModuleID" class="control-label"></label>
                <select asp-for="GPA.SubjectModuleID" class="form-control"
                        asp-items="@Model.SubjectModuleNameSL">
                    <option value="">-- Select Subject Module --</option>
                </select>
                <span asp-validation-for="GPA.SubjectModuleID" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="GPA.YearID" class="control-label"></label>
                <select asp-for="GPA.YearID" class="form-control"
                        asp-items="@Model.YearNameSL">
                    <option value="">-- Select Year --</option>
                </select>
                <span asp-validation-for="GPA.YearID" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
