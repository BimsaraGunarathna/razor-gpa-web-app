@page
@model razor_gpa_web_app.Pages.GPAs.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>GPA</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GPA.GPAID" />
            <div class="form-group">
                <label asp-for="GPA.GPAValue" class="control-label"></label>
                <input asp-for="GPA.GPAValue" class="form-control" />
                <span asp-validation-for="GPA.GPAValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GPA.StudentID" class="control-label"></label>
                <select asp-for="GPA.StudentID" class="form-control" asp-items="ViewBag.StudentID"></select>
                <span asp-validation-for="GPA.StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GPA.SemesterID" class="control-label"></label>
                <select asp-for="GPA.SemesterID" class="form-control" asp-items="ViewBag.SemesterID"></select>
                <span asp-validation-for="GPA.SemesterID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GPA.SubjectModuleID" class="control-label"></label>
                <select asp-for="GPA.SubjectModuleID" class="form-control" asp-items="ViewBag.SubjectModuleID"></select>
                <span asp-validation-for="GPA.SubjectModuleID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GPA.AcademicYearID" class="control-label"></label>
                <select asp-for="GPA.AcademicYearID" class="form-control" asp-items="ViewBag.AcademicYearID"></select>
                <span asp-validation-for="GPA.AcademicYearID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
