@page
@model razor_gpa_web_app.Pages.Grades.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].GradeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].FinalMarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].CreditValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Grade) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GradeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinalMarks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreditValue)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.GradeID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.GradeID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.GradeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
